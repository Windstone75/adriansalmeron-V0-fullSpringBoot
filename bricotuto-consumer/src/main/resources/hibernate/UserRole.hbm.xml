<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- ************ -->
	<!-- Mapping Role -->
	<!-- ************ -->
	<class name="com.asf.bricotuto.model.bean.User.Role" table="role">
		<id name="roleId" type="int" column="role_id">
			<generator class="increment" />
		</id>
		<property name="name" type="string" not-null="true" />
	</class>

	<!-- ************ -->
	<!-- Mapping User -->
	<!-- ************ -->
	<class name="com.asf.bricotuto.model.bean.User.AppUser" table="user">
		<id name="userId" type="int" column="user_id">
			<generator class="increment" />
		</id>
		<property name="login" type="string" not-null="true" />
		<property name="password" type="string" not-null="true" />
		<property name="inscriptionDt" type="date"
			column="inscription_dt" not-null="true" />
		<property name="updateDt" type="date" column="update_dt" />
		
		<!-- association avec une liste de Role-->
		<set name="roles" table="user_role">
			<key column="user_Id" />
			<many-to-many column="role_id" class="com.asf.bricotuto.model.bean.User.Role" />
		</set>
	</class>
		
</hibernate-mapping>

