<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ===== DÃ©claration des DAO ===== -->
    <bean id="userDao" class="com.asf.bricotuto.consumer.impl.dao.UserDaoImpl">
    </bean>
    <bean id="roleDao" class="com.asf.bricotuto.consumer.impl.dao.RoleDaoImpl">
    </bean>

    <!-- ===== DaoFactory ===== -->
    <bean id="daoFactory" class="com.asf.bricotuto.consumer.impl.DaoFactoryImpl">
        <property name="userDao" ref="userDao"/>
        <property name="roleDao" ref="roleDao"/>
    </bean>
</beans>