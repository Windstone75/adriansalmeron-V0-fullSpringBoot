<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- ===== DÃ©claration des Managers ===== -->
<bean id="userManager" class="com.asf.bricotuto.business.impl.manager.UserManagerImpl"/>

<!-- ===== ManagerFactory ===== -->
<bean id="managerFactory" class="com.asf.bricotuto.business.impl.ManagerFactory">
    <property name="userManager" ref="userManager"/>
</bean>
<!-- ==== AbstractResource ===== -->
<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetClass" value="com.asf.bricotuto.webapp.rest.resource.AbstractResource"/>
    <property name="targetMethod" value="setManagerFactory"/>
    <property name="arguments" ref="managerFactory"/>
</bean>

</beans>