<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- ==== Import Context===== -->
	<import resource="consumerContext.xml" />

	<!-- ==== AbstractManager===== -->
	<bean id="abstractManager" abstract="true">
		<property name="daoFactory" ref="daoFactory"></property>
	</bean>

	<!-- ===== DÃ©claration des Managers ===== -->
	<bean id="userManager"
		class="com.asf.bricotuto.business.impl.manager.UserManagerImpl"
		parent="abstractManager" />
	<bean id="roleManager"
		class="com.asf.bricotuto.business.impl.manager.RoleManagerImpl"
		parent="abstractManager" />
	<bean id="authManager"
		class="com.asf.bricotuto.business.impl.manager.AuthManagerImpl"
		parent="abstractManager" />

	<!-- ===== ManagerFactory ===== -->
	<bean id="managerFactory"
		class="com.asf.bricotuto.business.impl.ManagerFactoryImpl">
		<property name="userManager" ref="userManager" />
		<property name="roleManager" ref="roleManager" />
		<property name="authManager" ref="authManager" />
	</bean>

</beans>